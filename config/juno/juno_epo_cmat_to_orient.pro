function juno_epo_cmat_to_orient, cmat

 s = size(cmat)
 if(s[0] EQ 2) then n = 1 $
 else n = s[3]

 orient = dblarr(3,3,n, /nozero)

 orient[0,*,*] =  -cmat[*,0,*] ;x
 orient[1,*,*] =  cmat[*,2,*] ;y 
 orient[2,*,*] =  cmat[*,1,*] ;z




 return, orient
end
