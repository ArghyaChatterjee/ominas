;===============================================================================
; grim_compute_star
;
;===============================================================================
function grim_compute_star, map=map, fov=fov, hide=hide, $
                            gd=gd, active_xds=active_xds, active_ptd=active_ptd, $
                            data=data, $
                            npoints=npoints

 grim_message, /clear

 sds = gd.sd
 nsd = n_elements(sds)

 ;--------------------------------
 ; compute points
 ;--------------------------------
 if(NOT keyword_set(sds)) then return, 0
 star_ptd = pg_center(cd=gd.cd, bx=sds, fov=fov)
 grim_message

 ;--------------------------------
 ; hide points
 ;--------------------------------
;;;; if(keyword__set(gd.rd)) then $
;;;;                  pg_hide, star_ptd, cd=gd.cd, dkx=gd.rd, gbx=gd.pd, /disk
;;;; grim_message

 if(keyword_set(gd.pd)) then pg_hide, star_ptd, cd=gd.cd, gbx=gd.pd, /globe, hide_ptd_globe, /cat
 grim_message


 ;--------------------------------
 ; store some data
 ;--------------------------------
 if(keyword_set(data)) then _data = data $
 else _data = {__str_data, name_p:ptr_new(0), mag_p:ptr_new(0)}
 
 *_data.name_p = cor_name(sds)
 *_data.mag_p = str_get_mag(sds)
 data = _data


 ;-------------------------------------
 ; set up output points
 ;-------------------------------------
 ptd = star_ptd
 if(keyword_set(hide_ptd_disk)) then if(NOT hide) then ptd = [ptd, hide_ptd_disk]
 if(keyword_set(hide_ptd_globe)) then if(NOT hide) then ptd = [ptd, hide_ptd_globe]

 return, ptd
end
