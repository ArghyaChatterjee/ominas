;=============================================================================
; grim_get_stations
;
;=============================================================================
function grim_get_stations, grim_data, replace=replace, plane=plane, names=names
@grim_constants.common

 if(NOT keyword_set(plane)) then plane = grim_get_plane(grim_data)

 map = grim_test_map(grim_data)

 mark = grim_demark_descriptor((*plane.std_p)[0])
 if(mark EQ MARK_FRESH) then std = get_object_by_name(*plane.std_p, names) $
 else $
  begin
;   if(NOT map) then primaries = cor_name(*plane.pd_p) $
;   else primaries = cor_name(*plane.cd_p)
   if(NOT map) then bx = *plane.pd_p

   std = pg_get_stations(plane.dd, $
                  od=*plane.cd_p, bx=bx, name=names, plane.trs_std)

   if(NOT keyword_set(std)) then return, 0

   grim_add_descriptor, grim_data, plane.std_p, std, replace=replace
  end

 return, std
end
;=============================================================================



;=============================================================================
; grim_get_arrays
;
;=============================================================================
function grim_get_arrays, grim_data, replace=replace, plane=plane, names=names
@grim_constants.common

 if(NOT keyword_set(plane)) then plane = grim_get_plane(grim_data)

 map = grim_test_map(grim_data)

 mark = grim_demark_descriptor((*plane.ard_p)[0])
 if(mark EQ MARK_FRESH) then ard = get_object_by_name(*plane.ard_p, names) $
 else $
  begin
;   if(NOT map) then primaries = cor_name(*plane.pd_p) $
;   else primaries = cor_name(*plane.cd_p)
   if(NOT map) then bx = *plane.pd_p

   ard = pg_get_arrays(plane.dd, $
                  od=*plane.cd_p, bx=bx, name=names, plane.trs_ard)

   if(NOT keyword_set(ard)) then return, 0

   grim_add_descriptor, grim_data, plane.ard_p, ard, replace=replace
  end

 return, ard
end
